<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.stepstone.stepper.StepperLayout
        android:id="@+id/stepper_create"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:ms_stepperType="tabs"
        app:ms_backButtonColor="@color/colorPrimary"
        app:ms_nextButtonColor="@color/colorPrimary"
        app:ms_completeButtonColor="@color/colorPrimary"
        app:ms_activeStepColor="@color/colorPrimary"
        app:ms_showBackButtonOnFirstStep="true"
        app:ms_errorColor="#ff0000"
        app:ms_showErrorStateEnabled="true"/>
</RelativeLayout>